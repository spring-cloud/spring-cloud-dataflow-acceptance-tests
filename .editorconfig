root = true

# -----------------------------------------------------------------------------
# defaults
# -----------------------------------------------------------------------------
[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

# -----------------------------------------------------------------------------
# shell scripts
# -----------------------------------------------------------------------------
[*.sh]
indent_size = 2
